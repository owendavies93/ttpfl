#! /usr/bin/env perl

use Mojo::Base -strict;

use JSON::XS;

my $json_file = $ARGV[0];
open my $fh, '<', $json_file or die "Failed to open $json_file: $!";

while (<$fh>) {
    my $json = decode_json($_);
    for my $key (@{$json->{rankings}}) {
        say join "\t", $key->{rowName}, $key->{points}, $key->{points}, $key->{ranking};
    }
}
